<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_maps_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petut.thobbyo.petut.PlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:style_url="@string/style_mapbox_streets"
            mapbox:attribution_enabled="false"
            mapbox:rotate_enabled="false"
            mapbox:tilt_enabled="false">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/location_toggle_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                srcCompat="@drawable/ic_my_location"
                tools:ignore="VectorDrawableCompat"
                backgroundTint="@color/colorAccent"/>
        </com.mapbox.mapboxsdk.maps.MapView>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.petut.thobbyo.petut.MainMenuView"
            android:id="@+id/view"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp" />

    </RelativeLayout>

</RelativeLayout>
